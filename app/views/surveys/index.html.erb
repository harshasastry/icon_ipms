<%= stylesheet_link_tag 'style.css' %>

<center>
  <%= image_tag('logo-iconcadd.png') %>
</center>

<center>
  <h1> Manage Survey Data </h1>
<hr/>
<br/>

<h2>
<%= link_to 'New', new_survey_path %>
<br>
<br>
<%= link_to 'Search', surveys_search_path(org: "WIPRO") %>
</h2>

<br/>
<h2>List of surveys</h2>
</center>

<div class="container">
	<div class="table">
		<div class="table-header">
			<div class="header__item"><a id="Organisation" class="filter__link" href="#">Organisation</a></div>
			<div class="header__item"><a id="City" class="filter__link" href="#">City</a></div>
			<div class="header__item"><a id="Location" class="filter__link" href="#">Location</a></div>
      <div class="header__item"><a id="Unit" class="filter__link" href="#">Unit</a></div>
			<div class="header__item"><a id="Tower" class="filter__link" href="#">Tower</a></div>
			<div class="header__item"><a id="Floor" class="filter__link" href="#">Floor</a></div>
      <div class="header__item"><a id="Area" class="filter__link" href="#">Area</a></div>
      <div class="header__item"><a id="Component" class="filter__link" href="#">Component</a></div>
      <div class="header__item"><a id="IPMS" class="filter__link" href="#">IPMS</a></div>
      <div class="header__item"><a id="Actions" class="filter__link" href="#">Actions</a></div>
		</div>
		<div class="table-content">
      <% @surveys.each do |survey| %>
			<div class="table-row">
				<div class="table-data"><%= survey.organisation %></div>
				<div class="table-data"><%= survey.city %></div>
				<div class="table-data"><%= survey.location %></div>
        <div class="table-data"><%= survey.unit %></div>
        <div class="table-data"><%= survey.tower %></div>
				<div class="table-data"><%= survey.floor %></div>
        <div class="table-data"><%= survey.area %></div>
        <div class="table-data"><%= survey.component %></div>
        <div class="table-data"><%= survey.ipms %></div>
        <div class="table-data">
          <%= link_to 'Show', survey_path(survey) %> |
          <%= link_to 'Edit', edit_survey_path(survey) %> |
          <%= link_to 'Delete', survey_path(survey),method: :delete,data: { confirm: 'Are you sure?' } %>
        </div>
			</div>
      <% end %>
    </div>
	</div>
</div>

<%= link_to 'Back', home_index_path %>
