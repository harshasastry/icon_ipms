<%= stylesheet_link_tag 'dropdown.css' %>

<center>
  <%= image_tag('logo-iconcadd.png') %>
</center>

<center>
<h1>Search Surveys</h1>

<hr/>

<br/>
<!-- scope: :survey removed below -->
<%= form_with url: surveys_searchResults_path, local: true do |f| %>

  <p><h2> <%= f.label :organisation, "Select a Organisation" %> </h2>
  <%= f.select :organisation, ['Tipro', 'Disco', 'Infy']%>
  </h2></p>

  <p><h2> <%= f.label :city, "Select a city" %> </h2>
  <%= f.select :city, ['Bangalore', 'Mysuru', 'Chennai']%>
  </h2></p>

  <p><h2>
  <%= f.label :office, "Select office" %>
  <%= f.select :office, ['Wipro Corporate Office, Sarjapur', 'Wipro Tech Ltd, EC1', 'Wipro Tech Ltd, EC2', 'Wipro Tech Ltd, EC3', 'Wipro Tech, Madiwala', 'Wipro Tech, ORR']%>
  </h2></p>

  <p><h2>
  <%= f.label :building, "Select Building" %>
  <%= f.select :building, ['Wipro Corporate Office, Level-B2','Wipro Corporate Office, Level-B1', 'Wipro Corporate Office, Level-0', 'Wipro Corporate Office, Level-1', 'Wipro Corporate Office, Level-2', 'Wipro Corporate Office, Level-3']%>
  </h2></p>

  <%= f.submit "Search" %>

<% end %>

<br/>
<%= link_to 'Back', surveys_path %>
</center>
